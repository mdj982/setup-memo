{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Debug Build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-std=c++1z",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
